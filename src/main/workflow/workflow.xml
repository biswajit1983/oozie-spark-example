<workflow-app xmlns='uri:oozie:workflow:0.5' name='SparkFileCopy'>
    <start to='spark-node' />

    <action name='spark-node'>
        <spark xmlns="uri:oozie:spark-action:0.1">
            <job-tracker>${jobTracker}</job-tracker>
            <name-node>${nameNode}</name-node>
            <prepare>
                <delete path="${nameNode}/user/oozie/output-data/"/>
            </prepare>
            <configuration>
                <property>
                    <name>oozie.use.system.libpath</name>
                    <value>true</value>
                </property>
                <property>
                    <!-- https://stackoverflow.com/a/25772041/455449 -->
                    <name>yarn.application.classpath</name>
                    <value>$HADOOP_COMMON_HOME/*,$HADOOP_COMMON_HOME/lib/*</value>
                </property>
            </configuration>
            <master>${master}</master>
            <name>Spark-FileCopy</name>
            <class>SparkFileCopy</class>
            <jar>${nameNode}/apps/oozie/oozie-spark-example/lib/oozie-spark-example.jar</jar>
            <arg>${nameNode}/apps/oozie/oozie-spark-example/input-data.txt</arg>
            <arg>${nameNode}/apps/oozie/oozie-spark-example/output-data.txt</arg>
        </spark>
        <ok to="end" />
        <error to="fail" />
    </action>

    <kill name="fail">
        <message>Workflow failed, error message[${wf:errorMessage(wf:lastErrorNode())}]
            INFO: wf:actionData('myJavaAction')['exceptionTrace']
        </message>
    </kill>
    <end name='end' />
</workflow-app>
